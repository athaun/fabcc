<%- include('partials/head')%>

<link href="https://cdn.reflowhq.com/v1/toolkit.min.css" rel="stylesheet" />

<%- include('partials/navbar')%>


<div class="page-background">
    <div class="container page" id="page">
        <a href="/store">Back</a> - <a href="/store/cart">Cart</a>
        <br><br>
        <!-- Since we don't pass a data-reflow-product parameter, the Product component will look for ?product=xxxx in the page URL. -->
        <div data-reflow-type="product" data-reflow-product="<%= id %>" data-reflow-shoppingcart-url="/store/cart"></div>

        <h4 class="mt-5 mb-5">Similar Products</h4>

        <div id="similar-products" data-reflow-type="product-list" data-reflow-perpage="4" data-reflow-product-link="/store/product/{id}" data-reflow-show="image,name,price" data-reflow-layout="cards">
        </div>

        <script>
            // Set Product List's data-reflow-similar-to attribute dynamically from the product id in the URL
            // let prodID = new URL(location.href).searchParams.get('product');
            document.querySelector('#similar-products').dataset.reflowSimilarTo = <%= id %>;
        </script>
    </div>
</div>

<script src="https://cdn.reflowhq.com/v1/toolkit.min.js" data-reflow-store="1316370211" defer></script>

<%- include('partials/footer')%>